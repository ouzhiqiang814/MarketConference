.inRecFlag_1{
  animation: b 1000s ,fadeIn 5s ease 0s 1 both;
  -webkit-animation: b 1000s ,fadeIn 5s ease 0s 1 both;
  -moz-animation: b 1000s,fadeIn 5s ease 0s 1 both;
  transform-origin: center center;
  -webkit-transform-origin: center center;
  -moz-transform-origin: center center;
}

@keyframes a {
  form {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    
  }

  to {
    transform: rotate(36000deg);
    -webkit-transform: rotate(36000deg);
    -moz-transform: rotate(36000deg);
  }
}

@keyframes b {
  form {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    opacity: 0
  }

  to {
    transform: rotate(-36000deg);
    -webkit-transform: rotate(-36000deg);
    -moz-transform: rotate(-36000deg);
    opacity: 1
  }
}

.inRec-hide {
  display: none;
  opacity: 0;
}


@-webkit-keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
